{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true, // prod - false
        "sourceMap": true, // prod - false
        "outDir": "./lib",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
    }
}